{% extends 'base.html.twig' %}

{% block body %}

    {% if (word) %}

        <h1>Meanigs of '{{ word.getWord() }}':</h1>

        {% for meaning in word.getMeanings() %}

            <p>
                <strong>{{ meaning.getSpeachPart() }}</strong><br>
                {{ meaning.getDefinition() }}
            </p>

        {% endfor %}

    {% else %}

        <h1>Couldn't find meaning of '{{ searchedWord }}'.</h1>

    {% endif %}

{% endblock %}